<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/weather_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.84"
                    android:orientation="vertical">


                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="?attr/colorPrimary"
                        android:elevation="4dp"
                        android:minHeight="?attr/actionBarSize"
                        android:paddingTop="@dimen/tool_bar_top_padding"
                        android:transitionName="actionBar" />

                    <TextView
                        android:id="@+id/city_name"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dp"
                        android:text="杭州"
                        android:textColor="@color/title_bar"
                        android:textSize="50sp" />
                    <!--<include android:id="@+id/city_name_part"-->
                        <!--layout="@layout/city_part"/>-->


                    <TextView
                        android:id="@+id/weather_desp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="雷阵雨转中雨"
                        android:textColor="@color/title_bar"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/temp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="3"
                            android:textColor="@color/title_bar"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="~"
                            android:textColor="@color/title_bar"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/temp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="15"
                            android:textColor="@color/title_bar"
                            android:textSize="30sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_2"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-01"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="多云转晴"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_2_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="26"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_2_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="12"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_3"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-02"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_3"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="雷阵雨转小雨"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_3_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="24"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_3_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="12"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_4"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-03"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_4"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="暴雪"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_4_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="23"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_4_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="12"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_5"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-04"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_5"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="多云转晴"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_5_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="26"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_5_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="8"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_6"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-05"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_6"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="晴"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_6_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="31"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_6_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="12"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_7"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="05-06"
                            android:textColor="@color/title_bar"
                            android:textSize="16sp"

                            />

                        <TextView
                            android:id="@+id/weather_7"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_horizontal"
                            android:text="多云"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_7_h"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="26"
                            android:textColor="@color/title_bar" />

                        <TextView
                            android:id="@+id/temperature_7_l"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="12"
                            android:textColor="@color/title_bar" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/tips" />


                    <TextView

                        android:id="@+id/wearing_tip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="         哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                        android:textColor="@color/title_bar" />



                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </com.baoyz.widget.PullRefreshLayout>


</LinearLayout>